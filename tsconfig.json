{
    "files": [
        "./src/main.ts",
        "./src/polyfills.ts"
    ],
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "target": "es2020",
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}
